extends ../../layouts/layout.jade

block content
    .container
        .content
            .row
                .col-md-8
                    .card.single
                        .card-header Contact Us
                        .card-block
                            h1.card-title Rescue Bases
                            p.small.pull-md-left
                            p.card-text.lead Cras mattis consectetur purus sit amet fermentum. Sed posuere consectetur est at lobortis. Curabitur blandit tempus porttitor. Integer posuere erat a ante venenatis dapibus posuere velit aliquet. Donec sed odio dui.
                            br
                            img.thumbnail(src="holder.js/100px400?text=Image")
                            p.small.text-right
                                em This is an image caption
                            br

                .col-md-4
                    a(href="/blog")
                        .card.story
                            .card-header.small
                                strong Our Rescues
                            img.card-img-top(src="holder.js/100px200")
                            .card-block
                                span.label.label-default Rescues
                                &nbsp;
                                span.label.label-default Rescue Base Name
                                h3.card-title Aenean Ridiculus Porta Quam.
                                p.small
                                    strong 23 January 2016
                                a.btn.btn-primary(href="/posts/single")
                                    |   Read More 
                                    i.fa.fa-long-arrow-right
                    a(href="/involved")
                        .card.story.card-inverse(style="background-color:#59a550;")
                            .card-block
                                br
                                br
                                h3.card-title Get involved.
                                br
                                br
            br
            a(name="basefinder")
            .row
                .col-md-12
                    include ../../includes/base-finder.jade

            .row
                .col-md-12
                    .card.story
                        .card-block
                            h3.card-title Base Name
                            br
                            .row
                                .col-md-6    
                                    img.thumbnail(src="holder.js/100px350?text=Image")
                                .col-md-6
                                    .card-text.lead(style="color:#b0153c") 
                                        strong Emergency Number:
                                    a(href="tel:0829905972" style="color:#b0153c")
                                        strong 082 990 5972
                                    .card-text.lead GPS:
                                    a(href="http://maps.google.com") 33°  01.383’ S,  27° 53.478’ E
                                    .card-text.lead Craft:
                                    a(data-toggle='modal', data-target='#myModalSponsor') Spirit of Lotto (13m)
                                    br
                                    a(data-toggle='modal', data-target='#myModalSponsor') Spirit of Rotary East London (5.5m)
                                    .card-text.lead Needs:
                                    a(data-toggle='modal', data-target='#myModalVolunteer') A doctor to do the medicals for our volunteers.
                                    br
                                    .card-text.lead Station Commander:
                                    a(data-toggle='modal', data-target='#myModalBase') Geoff McGregor
                                    .card-text.lead Deputy:
                                    a(data-toggle='modal', data-target='#myModalBase')  Ian Reid
                            br
                            h3.card-title Base News
                            br
                            .card-deck
                                each title in ["Cras mattis consectetur purus sit amet.", "Morbi leo risus, porta ac consectetur ac, vestibulum at eros.", "Nullam id dolor id nibh ultricies vehicula ut id elit.", "Etiam porta sem malesuada magna."]
                                    .card.story
                                        img.card-img-top(src="holder.js/100px160")
                                        .card-block
                                            span.label.label-default Category
                                            &nbsp;
                                            span.label.label-default Rescue Base Name
                                            h4.card-title= title
                                            p.small
                                                strong 4 March 2016
                                            a.card-link(href="/posts/single")
                                                |   Read More 
                                                i.fa.fa-long-arrow-right

            #myModalBase.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
                .modal-dialog(role='document')
                    .modal-content

                        .modal-header
                            button.close(type='button', data-dismiss='modal', aria-label='Close')
                                span(aria-hidden='true') ×
                            h4.modal-title Contact Rescue Base
                        .modal-body
                            h5 [Selected Base Team Member]
                            br 
                            form.form-inline
                                .form-group
                                    label(for='exampleInputName2') Name&nbsp;
                                    input#exampleInputName2.form-control(type='text', placeholder='')
                                &nbsp;&nbsp;&nbsp;
                                .form-group
                                    label(for='exampleInputEmail2') Email&nbsp;
                                    input#exampleInputEmail2.form-control(type='email', placeholder='')
                            br            
                            form
                                fieldset.form-group
                                  label(for='exampleTextarea') Message
                                  textarea#exampleTextarea.form-control(rows='4')
                                
                        .modal-footer
                            button.btn.btn-primary(type='button', data-dismiss='modal') Send

                        
    br